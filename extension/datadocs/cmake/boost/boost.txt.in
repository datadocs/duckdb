# Boost Repository External Project template (headers only)
#
# To use, ddd the following in your CMakefile.txt
#
# fetch_dependency(boost "cmake/boost/boost.txt.in")
# target_include_directories(<your_target> PRIVATE ${CMAKE_CURRENT_BINARY_DIR}/boost)

cmake_minimum_required(VERSION 3.6)

project(boost-headers-download NONE)

set(DOWNLOADED_PROJECT_FILE "@CMAKE_SOURCE_DIR@/downloaded/libboost-includes-master.zip")
if(EXISTS ${DOWNLOADED_PROJECT_FILE})
  set(ExternalProject_Args URL ${DOWNLOADED_PROJECT_FILE})
else()
  set(ExternalProject_Args
    GIT_REPOSITORY    https://github.com/panda-34/libboost-includes.git
    GIT_TAG           master
    GIT_SHALLOW       true 
    # GIT_SHALLOW <bool> New in version 3.6.
    # It enable the option `--depth 1` for git clone to reducing building time and disk usage.
  )
endif()

include(ExternalProject)
ExternalProject_Add(boost-headers-download
  ${ExternalProject_Args}
  SOURCE_DIR        "@CMAKE_CURRENT_BINARY_DIR@/boost/boost"
  BINARY_DIR        "@CMAKE_CURRENT_BINARY_DIR@/boost-build"
  CONFIGURE_COMMAND ""
  BUILD_COMMAND     ""
  INSTALL_COMMAND   ""
  TEST_COMMAND      ""
  CMAKE_ARGS        "-DCMAKE_TOOLCHAIN_FILE=@CMAKE_TOOLCHAIN_FILE@"
)
